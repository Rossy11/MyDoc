.seekDetail {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fefefe;
}

.seekDetailInfo {
  width: 96%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.seekInfo {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.seekView {
  width: 85%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 70rpx;
  background: #eee;
  margin-left: 10rpx;
}

.seekImg {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 35rpx;
}

.seekInput {
  width: 80%;
  height: 100%;
  margin-left: 20rpx;
  color: black;
  font-size: 28rpx;
  /*font-weight: 500;*/
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.seekDelete{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 15rpx;
}
.seeking {
  width: 13%;
  height: 100%;
  padding-left: 25rpx;
  color: black;
  font-size: 35rpx;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.scrollSongCss {
  width: 96%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 30rpx;
  /*margin-bottom: 60rpx;*/
}

/*歌曲卡片*/

.songCard {
  width: 95%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 5rpx;
  padding: 15rpx;
  border: 3rpx solid gainsboro;
  background: #fefefe;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
}

.singerImgInfo {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}

.singerImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

.ranking {
  width: 80rpx;
  height: 37rpx;
  right: 0px;
  top: 0px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
}

.listen {
  width: 33rpx;
  height: 23rpx;
  right: 10rpx;
  bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
}

.singInfo {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center
}

.singerInfo {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center
}

.songName {
  width: auto;
  height: 100%;
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: 600;
  margin-left: 30rpx;
}

.singerName {
  width: auto;
  height: 100%;
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 550;
  margin-left: 20rpx;
  color: #555555;
}

.auditionerInfo {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  margin-bottom: 5rpx;
  margin-right: 5rpx;
}

.auditionerInfoDetail {
  width: auto;
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
    margin-right: 20rpx;
}

.auditionerName {
  width: auto;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  font-size: 24rpx;
  font-weight: 500;
  color: #555555;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap; /*强制不换行*/
}

.createTime {
  width: auto;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  font-size: 24rpx;
  margin-top: 5rpx;
  color: gray;
}

.auditionerImg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
}
.notfind{
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: gray;
}
.notSingCss{
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.notSing{
  width: auto;
  height: auto;
  margin-top: 10rpx;
  color: #ccc;
}










