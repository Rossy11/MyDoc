.loginInfo {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.loginDetailInfo {
  width: 80%;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
}

.headInfo {
  width: 33%;
  height: 100%;
}

.headImgInfo {
  width: auto;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.headImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}

.loginHint {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.connect {
  width: 83rpx;
  height: 64rpx;
}

.facilityInfo {
  width: 33%;
  height: 100%;
}

.facilityImgInfo {
  width: auto;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.facilityImg {
  width: 120rpx;
  height: 190rpx;
}

.facilityHint {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: red;
  border: 2rpx solid red;
  /*border-radius: 4rpx;*/
  margin-top: 10rpx;
  padding-left: 2rpx;
  padding-right: 2rpx;
  box-shadow: -5rpx 5rpx 5rpx #888;
}

.songInfo {
  width: 80%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 45rpx;
}

.notLoginView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top:0rpx;
}

.notLogin {
  width: 90%;
  height: 40%;
  margin-top: 180rpx;
}

.hiddenPop {
  width: 66rpx;
  height: 66rpx;
  margin-top: 100rpx;
}
